{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "host": {
                "sourcePath": "/var/academy-db"
            },
            "name": "VarAcademy-Db"
        },
        {
            "host": {
                "sourcePath": "/var/academy-media"
            },
            "name": "VarAcademy-Media"
        },
        {
            "host": {
                "sourcePath": "/var/app/current/conf.d"
            },
            "name": "Nginx-Conf"
        }
    ],
    "containerDefinitions": [
        {
            "image": "yaseralnajjar/academy_api",
            "command": [
                "sh",
                "-c",
                "celery multi start worker1 -A coretabs && memcached -d -u root -s /tmp/memcached.sock && gunicorn --bind 0.0.0.0:8000 coretabs.wsgi --timeout 90 --log-level=DEBUG"
            ],
            "memoryReservation": 100,
            "essential": true,
            "links": [
                "db"
            ],
            "mountPoints": [
                {
                    "containerPath": "/djangoapp/media",
                    "sourceVolume": "VarAcademy-Media"
                }
            ],
            "name": "api",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ]
        },
        {
            "essential": true,
            "image": "postgres:10.5",
            "mountPoints": [
                {
                    "containerPath": "/var/lib/postgresql/data",
                    "sourceVolume": "VarAcademy-Db"
                }
            ],
            "name": "db",
            "memoryReservation": 100,
            "portMappings": [
                {
                    "containerPort": 5432,
                    "hostPort": 5432
                }
            ]
        },
        {
            "image": "yaseralnajjar/academy_spa",
            "memoryReservation": 100,
            "command": [
                "sh",
                "-c",
                "npm start"
            ],
            "essential": true,
            "name": "spa",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 8001
                }
            ]
        },
        {
            "image": "nginx:1.15.3-alpine",
            "memoryReservation": 128,
            "essential": true,
            "mountPoints": [
                {
                    "containerPath": "/etc/nginx/conf.d",
                    "sourceVolume": "Nginx-Conf"
                },
                {
                    "containerPath": "/var/academy-media",
                    "sourceVolume": "VarAcademy-Media",
                    "readOnly": true
                }
            ],
            "name": "reverse-proxy",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "links": [
                "spa",
                "api"
            ]
        }
    ],
    "family": ""
}